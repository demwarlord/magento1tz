<layout>
    <default>
        <reference name="footer_links">
            <action method="addLink" translate="label title">
                <label>Testimonials</label>
                <url>testimonials</url>
                <title>Testimonials</title>
            </action>
        </reference>
    </default>
    <testimonials_index_index>
        <reference name="head">
            <action method="addCss">
                <stylesheet>css/testimonials.css</stylesheet>
            </action>
        </reference>
        <reference name="root">
            <action method="setTemplate">
                <template>page/2columns-right.phtml</template>
            </action>
        </reference>
        <reference name="content">
            <block type="overdose_testimonials/form" name="testimonials.form" template="testimonials/form.phtml"/>
            <block type="overdose_testimonials/list" name="testimonials.list" template="testimonials/list.phtml"/>
        </reference>
    </testimonials_index_index>
</layout>